<h2>Update Category Details</h2>

<form class="new-update" method="post" action="/categories/update/<%= @category.id %>">

  <label for="name">Category:</label>
    <input id="name" type="text" name="name" maxlength="255" value="<%= @category.name %>" required/>

  <label for="colour">Colour:</label>
    <select id="colour" name="colour" >
      <% if @category.colour != "" %>
        <option value="<%= @category.colour %>" selected hidden><%= @category.colour %></option>
      <% else %>
        <option value="" selected hidden>None</option>
      <% end %>
      <option value="">None</option>
      <option value="red">Red</option>
      <option value="blue">Blue</option>
      <option value="yellow">Yellow</option>
      <option value="green">Green</option>
      <option value="purple">Purple</option>
      <option value="orange">Orange</option>
    </select>

  <div class="form-submit">
    <input type="submit" value="Update Category"/>
    <a href="/categories">Cancel</a>
  </div>

</form>
